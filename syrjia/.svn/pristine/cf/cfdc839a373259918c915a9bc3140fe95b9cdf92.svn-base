<!DOCTYPE html>
<html lang="en" ng-app="searchKnowApp" ng-controller="searchKnowCon">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
	<link rel="stylesheet" type="text/css" href="../../css/mui.min.css">
<link rel="stylesheet" type="text/css" href="../../css/style.css">
<script src="../../js/mui.min.js"></script>
<script type="text/javascript" src="../../js/jquery.min.js"></script>
<script type="text/javascript" src="../../js/angular.min.js"></script>
<script src="../../js/angular-sanitize.min.js"></script>
<script src="../../js/angular-cookies.min.js"></script>
<script src="../../js/util.js"></script>
	<title>找文章</title>
</head>
<style>
	.searchdoc_doctor{padding-right: 0.93rem;border-bottom: 1px solid #e5e5e5;display: flex;display: -webkit-flex;flex-direction: row;}
	.searchdoc_doctor:last-child{border-bottom: none;}
</style>
<body>
	<div class="search_top">
		<div class="search_import search_bar">
			<!-- <form action="javascript:return true;"  class="goods_search">
				<input id="searchName" type="search" placeholder="搜索" ng-model="searchName" ng-change="myFunc();" ng-keyup="search($event)">
					<span></span>
			</form> -->
			<form action="javascript:return true;">
				<span></span>
				<input id="searchName" type="search" placeholder="搜索文章" ng-model="searchName" ng-change="myFunc();" ng-keyup="search($event)">
			</form>
		</div>
		<a class="mui-action-back">取消</a>
	</div>
	<div class="search_con">
		<h3 ng-if="null!=keySearch"><span class="left_icon"></span>历史搜索</h3>
		<ul>
			<li ng-repeat="key in keySearch" ng-cloak ng-bind="key" ng-click="checkSearch(key)"></li>
		</ul>
		<a class="search_delete" ng-if="null!=keySearch" ng-click="deleteSearch()"></a>
	</div>
	<ul class="search_keyword"  ng-repeat="ll in lists" ng-cloak>
		<li ng-if="ll.TYPE==1" ng-click="checkSearchDoc(ll.doctorId,ll.docName)" >
			<div class="searchdoc_doctor">
				<img ng-src="{{ll.docUrl}}">
				<h3 ng-bind="ll.docName"></h3>
				<span  ng-bind="ll.docPosition"></span>
				<span  ng-bind="ll.hosName"></span>
			</div>
		</li>
		<li ng-if="ll.TYPE!=1" ng-click="checkSearch(ll.docName)" >
			<p ng-bind="ll.docName"></p>
		</li>
	</ul>
	
	<script type="text/javascript" src="../../js/knowledge/search.js"></script>
	<script type="text/javascript" src="../../js/foot.js"></script>
</body>
</html>