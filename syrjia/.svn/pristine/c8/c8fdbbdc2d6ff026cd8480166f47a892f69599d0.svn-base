<!DOCTYPE html>
<html lang="en" ng-app="personManageApp" ng-controller="personManageCon">
<head>

<meta charset="UTF-8">
<meta name="viewport"
	content="width=device-width,initial-scale=1,user-scalable=no">
<link rel="stylesheet" type="text/css" href="../../css/mui.min.css">
<link rel="stylesheet" type="text/css" href="../../css/style.css">
<link rel="stylesheet" type="text/css" href="../../css/owl.carousel.css">
<link rel="stylesheet" type="text/css" href="../../css/owl.theme.css">
<link href="../../css/mui.picker.min.css" rel="stylesheet" type="text/css">
<script src="../../js/mui.min.js"></script>
<script type="text/javascript" src="../../js/jquery.min.js"></script>
<script type="text/javascript" src="../../js/owl.carousel.js"></script>
<script src="../../js/swiper.min.js"></script>
<script type="text/javascript" src="../../js/angular.min.js"></script>
<script src="../../js/angular-sanitize.min.js"></script>
<script src="../../js/util.js"></script>
<script src="../../js/mui.picker.min.js"></script>

<title>就诊人管理</title>
</head>
<style type="text/css">
.mui-poppicker-header {
	background: #f6f6f6;
	border: none;
	padding: 0;
	height: 2.5rem;
}

.mui-poppicker-btn-ok {
	line-height: 2.5rem;
	width: auto;
	background: none;
	font-size: 0.8rem;
	color: #cc0422;
	padding: 0 1rem;
	position: absolute;
	right: 0;
	top: 0;
	z-index: 999999999;
}

.mui-poppicker-btn-cancel {
	background: none;
	font-size: 0.8rem;
	color: #a8a8a8;
	width: auto;
	padding: 0 1rem;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 999999999;
}
</style>
<script type="text/javascript">
	var myscroll;
	document.addEventListener('touchmove', function(e) {
		e.preventDefault();
	}, isPassive() ? {
		capture : false,
		passive : false
	} : false);
	function isPassive() {
		var supportsPassiveOption = false;
		try {
			addEventListener("test", null, Object.defineProperty({}, 'passive',
					{
						get : function() {
							supportsPassiveOption = true;
						}
					}));
		} catch (e) {
		}
		return supportsPassiveOption;
	}
	
</script>
<body>
	<ul class="manage_con person_con">
		<li class="manage_address" id="MM">
			<h3>与本人关系</h3> <button type="text" style="background: #fff url(../../img/more.png) no-repeat right center;
			    background-size: 0.437rem 0.78rem;
			    padding-right: 0.8rem !important;
			    line-height: 2.8rem;
			    height: 2.8rem;
			    font-size: 0.875rem;
			    color: #111;
			    text-align: right;
			    text-overflow: ellipsis;
			    overflow: hidden;
			    white-space: nowrap;"
			    padding: 0;" class="suc-msg" ng-model="nexuinputhidden">请选择与本人的关系</button></li>
		<li>
			<h3>姓名</h3> <input type="text" maxlength="25" placeholder="请填写姓名"  ng-model="patientname"></li>
		<li class="manage_address" id="sex">
			<h3>性别</h3> <button type="text" placeholder="请选择性别" class="suc-sex" style="background: #fff url(../../img/more.png) no-repeat right center;
			    background-size: 0.437rem 0.78rem;
			    padding-right: 0.8rem !important;
			    line-height: 2.8rem;
			    height: 2.8rem;
			    font-size: 0.875rem;
			    color: #444;
			    text-align: right;
			    text-overflow: ellipsis;
			    overflow: hidden;
			    white-space: nowrap;"
				 ng-bind="sex==0?'男':'女'"></button></li>
		<li ng-click="getFouse($event)">
			<h3>年龄</h3> <input type="tel" maxlength="3" placeholder="请输入年龄" ng-model="age"></li>
		<li ng-click="getFouse($event)">
			<h3>手机号</h3> <input type="tel" maxlength="11" placeholder="请填写手机号" ng-model="phone"></li>
	</ul>
	<div class="evalua_finish manage_finish" style="display: none">
		<button ng-click="save()">完成</button>
	</div>
	<script>
		$(function(){
			var h = $(window).height();
		    var H = h - $(".manage_con").height() - $(".manage_finish").height() - 36;
		    $(".manage_finish").css("marginTop",H);
		    $(".manage_finish").show();
		});
	</script>

	<script type="text/javascript" src="../../js/person/person_manage.js"></script>
	<script type="text/javascript" src="../../js/foot.js"></script>
	
</body>
</html>